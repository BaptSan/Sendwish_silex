{% extends "layout.html.twig" %}
{% block menus %}
	<div id="menuParallax">
		<div class="maskProductBox">
		{% if menus != null %}
			{% set i = 0 %}
			{% for menu in menus %}
				{% set i = i+1 %}
					{% if i%2 != 0 %}
						<div class="contentProductBoxPair">
							<div class="productBoxPair">
								<img class="imgProductBox" src="{{menu.imagePath}}">
								<h2>{{menu.name}} <br> {{menu.price}}€</h2>	
							</div>
							<div class="paraBoxPair">
								<p>{{menu.description}}</p>
							</div>
						</div>
					{% else %}	
						<div class="contentProductBoxImpair">
							<div class="productBoxImpair">
								<img class="imgProductBox" src="{{menu.imagePath}}">
								<h2>{{menu.name}} <br> {{menu.price}}€</h2>
							</div>
							<div class="paraBoxImpair">
								<p>{{menu.description}}</p>
							</div>
						</div>
				{% endif %}
			{% endfor %}
		{% endif %}
		</div>
	</div>
{% endblock %}
