{% extends "layout.html.twig" %}

{% block content %}
    {% if isRegister != NULL or connect != NULL %}
		<div class="divRegisterInfo d-flex align-items-center justify-content-center">
			<div>
        {% if isRegister != NULL %}
				<p>Félicitations, vous êtes bien enregistré !</p>
        {% else %}
        <p>Félicitations, vous êtes bien connecté</p>
        {% endif %}
			</div>
		</div>
	{%  endif %}
{% endblock %}

{% block Header %}
<header class="masthead text-white text-center">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-xl-9 mx-auto">
            <h1 class="mb-4">Commandez c'est simple !</h1>
          </div>
          <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
            <form>
              <div class="form-row">
                <div class="col-12 col-md-9 mb-2 mb-md-0">
                  <input type="text" class="form-control form-control-lg" placeholder="Entrez votre adresse..">
                </div>
                <div class="col-12 col-md-3">
                  <button type="submit" class="btn btn-block btn-lg btn-info">Commander !</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </header>
{% endblock %}

{% block Carrousel %}
<div class="carousel carousel-nav mt-5">
        <div class="carousel-cell card" id="card1">
          <img src="/img/boisson/coca.png" alt="" class="w-100">
          <p class="text-center">Nos Boissons</p>
        </div>
        <div class="carousel-cell card" id="card2">
          <img src="/img/menu/bigking.png" alt="" class="w-100 align-self-center">
          <p class="text-center">Nos Menus</p>
        </div>
        <div class="carousel-cell card" id="card3">
          <img src="/img/Accompagnement/chilicheese.png" alt="" class="w-100 align-self-center">
          <p class="text-center">Petite Faim</p>
        </div>
        <div class="carousel-cell card" id="card4">
          <img src="/img/menu enfant/kingjunior.png" alt="" class="w-100 align-self-center">
          <p class="text-center">Menu Enfants</p>
        </div>
        <div class="carousel-cell card" id="card5">
          <img src="/img/sandwich/hamburgerenfant.png" alt="" class="w-100 align-self-center">
          <p class="text-center">Sandwich</p>
        </div>
      </div>
    </div>

          <!-- Second Carrousel -->
    <div class="container"  id="secondCar">
      
    </div>
{% endblock %}

{% block produits %}
  {% for product in products %}
    <div>
      <img src="{{"img/menu/" ~ product.imagePath}}">
      <h1>{{product.imagePath}}</h1>
      <h1>{{product.name}}</h1>
      <p>{{product.description}}</p>
      <p>{{product.price ~ "€"}}</p>
    </div>
  {% endfor %}
{% endblock %}
